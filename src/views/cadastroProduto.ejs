<%- include('partials/header') %>
<body>
    <main>
            <!-- POST -->
            <form
                method="post"
                action="/produtos/create"
                enctype="multipart/form-data"
            >
                <h2>CREATE</h2>
                <div class="check">
                    <input type="radio" name="check" class="check" />
                    <label for="Filmes">Filmes</label>
                    <input type="radio" name="check" class="check" />
                    <label for="Séries">Séries</label>
                </div>

                <input type="text" name="nome" placeholder="nome" />
                <textarea
                    type="text"
                    name="descricao"
                    placeholder="descricao"
                ></textarea>
                <input type="text" name="categoria" placeholder="categoria" />
                <input type="text" name="classificacao" placeholder="classificação" />
                <input type="text" name="valor" placeholder="valor" />
                <input type="file" name="imagem" placeholder="imagem" />
                <button>Adicionar</button>
            </form>

            <!-- GET -->
            <form method="get" action="/servicos/search">
                <h2>READ</h2>
                <input type="text" name="id" placeholder="id" />
                <button>Pesquisar</button>
            </form>

            <!-- PUT -->
            <form method="post" action="/servicos/edit?_method=PUT">
                <h2>UPDATE</h2>
                <input type="text" name="id" placeholder="id" />
                <input type="text" name="nome" placeholder="nome" />
                <textarea
                    type="text"
                    name="descricao"
                    placeholder="descricao"
                ></textarea>
                <input type="text" name="valor" placeholder="categoria" />
                <input type="text" name="valor" placeholder="classificação" />
                <input type="text" name="valor" placeholder="valor" />
                <input type="text" name="imagem" placeholder="imagem" />
                <button>Editar</button>
            </form>

            <!-- DELETE -->
            <form method="post" action="/servicos/remove?_method=DELETE">
                <h2>DELETE</h2>
                <input type="text" name="id" placeholder="id" />
                <button>Apagar</button>
            </form>
    </main>
</body>
<%- include('partials/footer')%>
