<%- include('partials/header') %>

    <body>
        <main>
            <!-- POST - CREATE -->
            <form method="POST" action="/produtos/create" enctype="multipart/form-data">
                <h2>CREATE</h2>
                <div class="check">
                    <input type="radio" name="tipo" value="filmes" class="check" checked/>
                    <label for="Filmes">Filmes</label>
                    <input type="radio" name="tipo" value="series" class="check" />
                    <label for="Séries">Séries</label>
                    <p class="erro"> <%= errors.tipo %> </p>
                </div>

                <input type="text" name="nome" placeholder="nome" />
                <p class="erro"> <%= errors.nome %> </p>
                <textarea type="text" name="descricao" placeholder="descricao"></textarea>
                <p class="erro"> <%= errors.descricao %> </p>
                 <select name="categoria" id="categoria">
                    <option value="select" selected hidden disabled>categoria</option>
                    <option value="ação" >Ação</option>
                    <option value="aventura">Aventura</option>
                    <option value="comédia" >Comédia</option>
                    <option value="dança">Dança</option>
                    <option value="documentário">Documentário</option>
                    <option value="drama">Drama</option>
                    <option value="faroeste">Faroeste</option>
                    <option value="ficção">Ficção</option>
                    <option value="guerra">Guerra</option>
                    <option value="musical">Musical</option>
                    <option value="policial">Policial</option>
                    <option value="romance">Romance</option>
                    <option value="suspense">Suspense</option>
                    <option value="terror">Terror</option>
                </select>
                <p class="erro"> <%= errors.categoria %> </p>  
                <input type="number" name="classificacao" placeholder="classificação" />
                <p class="erro"> <%= errors.classificacao %> </p>
                <input type="text" name="valor" placeholder="valor" />
                <p class="erro"> <%= errors.valor %> </p>
                <p>Imagem</p>
                <input type="file" name="imagem" placeholder="imagem" />
                <p class="erro"> <%= errors.imagem %> </p>
                <p>background</p>
                <input type="file" name="background" placeholder="background" />
                <p class="erro"> <%= errors.background %> </p>
                <button type="submit">Adicionar</button>
            </form>

            <!-- GET - READ -->
            <form method="get" action="/produtos/search">
                <h2>READ</h2>
                <div class="check">
                    <input type="radio" name="tipoRead" value="filmes" class="check" checked/>
                   <label for="Filmes" >Filmes</label>
                    <input type="radio" name="tipoRead" value="series" class="check" />
                    <label for="Séries">Séries</label>
                    <p class="erro"> <%= errors.tipoRead %> </p>
                </div>
                <input type="text" name="idRead" placeholder="id" />
                <p class="erro"> <%= errors.idRead %> </p>
                <button type="submit" id="bt-pesquisa">Pesquisar</button>
            </form>

            <!-- PUT - UPDATE -->
            <form method="POST" action="/produtos/edit?_method=PUT">
                <h2>UPDATE</h2>
                 <div class="check">
                    <input type="radio" name="tipo" class="check" checked/>
                    <label for="Filmes">Filmes</label>
                    <input type="radio" name="tipo" class="check" />
                    <label for="Séries">Séries</label>
                    <p class="erro"> <%= errors.tipo %> </p>
                </div>
                <input type="text" name="id" placeholder="id" />
                <p class="erro"> <%= errors.id %> </p>
                <input type="text" name="nome" placeholder="nome" />
                <p class="erro"> <%= errors.nome %> </p>
                <textarea type="text" name="descricao" placeholder="descricao"></textarea>
                <p class="erro"> <%= errors.descricao %> </p>
                <select name="categoria" id="categoria">
                    <option value="select" selected hidden disabled>categoria</option>
                    <option value="ação" >Ação</option>
                    <option value="aventura">Aventura</option>
                    <option value="comédia" >Comédia</option>
                    <option value="dança">Dança</option>
                    <option value="documentário">Documentário</option>
                    <option value="drama">Drama</option>
                    <option value="faroeste">Faroeste</option>
                    <option value="ficção">Ficção</option>
                    <option value="guerra">Guerra</option>
                    <option value="musical">Musical</option>
                    <option value="policial">Policial</option>
                    <option value="romance">Romance</option>
                    <option value="suspense">Suspense</option>
                    <option value="terror">Terror</option>                    
                </select>
                <p class="erro"> <%= errors.categoria %> </p> 
                <input type="text" name="classificacao" placeholder="classificação" />
                <p class="erro"> <%= errors.classificacao %> </p>
                <input type="text" name="valor" placeholder="valor" />
                <p class="erro"> <%= errors.valor %> </p>
                <p>Imagem</p>
                <input type="file" name="imagem" placeholder="imagem" />
                <p class="erro"> <%= errors.imagem %> </p>
                <p>background</p>
                <input type="file" name="background" placeholder="imagem" />
                <p class="erro"> <%= errors.background %> </p>
                <button type="submit">Editar</button>
            </form>

            <!-- DELETE -->
            <form method="POST" action="/produtos/remove?_method=DELETE">
                <h2>DELETE</h2>
                <div class="check">
                    <input type="radio" name="tipo" value="filmes" class="check" checked/>
                    <label for="Filmes">Filmes</label>
                    <input type="radio" name="tipo" value="series" class="check" />
                    <label for="Séries">Séries</label>
                    <p class="erro"> <%= errors.tipo %> </p>
                </div>
                <input type="text" name="id" placeholder="id" />
                <p class="erro"> <%= errors.id %> </p>
                <button type="submit">Apagar</button>
            </form>
        </main>

        <div class="pop-up">
            <section class='item-popUp'>
                <div class='descricao-popUp'>
                    <h1 id="titulo-popUp">TESTE</h1>
                </div>
            </section>
        </div>

    </body>
    <%- include('partials/footer')%>