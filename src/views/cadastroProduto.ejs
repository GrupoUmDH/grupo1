            <form method="POST" action="/produtos/remove?_method=DELETE">
                <h2>DELETE</h2>
                <div class="check">
                    <input type="radio" name="tipoDelete" value="filmes" class="check" checked />
                    <label for="Filmes">Filmes</label>
                    <input type="radio" name="tipoDelete" value="series" class="check" />
                    <label for="Séries">Séries</label>
                    <p class="erro">
