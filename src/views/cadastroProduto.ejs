                    <p class="erro">
                        <%= errors.tipoRead %>
                    </p>
                </div>
                <input type="text" name="idRead" placeholder="id" />
                <p class="erro">
                    <%= errors.idRead %>
                </p>
                <button type="submit" id="bt-pesquisa">Pesquisar</button>
            </form>

