<%- include('partials/header') %>

    <main>
        <section class="container-central">
            <button id="prev">&lArr;</button>
            <div class="carrossel-container">
                <div class="carrossel">
                    <div class="slide1">
                        <img src="/img/banners/banner1.jpg" alt="">
                    </div>
                    <div class="slide2">
                        <img src="/img/banners/banner2.jpg" alt="">
                    </div>
                    <div class="slide3">
                        <img src="/img/banners/banner3.jpg" alt="">
                    </div>
                    <div class="slide4">
                        <img src="/img/banners/banner4.jpg" alt="">
                    </div>
                </div>
            </div>
            <button id="next">&rArr;</button>
        </section>
        <hr>
        <h1 class="mais-populares">OS MAIS POPULARES</h1>
        <hr>

        <div id="items-wrapper">
            <div id="items">
                <div class="item"><img src="/img/carrossel-populares/scrool1.jpg"></div>
                <div class="item"><img src="/img/carrossel-populares/scrool2.jpg"></div>
                <div class="item"><img src="/img/carrossel-populares/scrool3.jpg"></div>
                <div class="item"><img src="/img/carrossel-populares/scrool4.jpg"></div>
                <div class="item"><img src="/img/carrossel-populares/scrool5.jpg"></div>
                <div class="item"><img src="/img/carrossel-populares/scrool6.jpg"></div>
            </div>
        </div>
        <hr>
        <section class="container">
            <div class="titulos">
                <h1>FILMES</h1>
                <a href="<%= '/produtos/filmes' %>">Mais Filmes...</a>
            </div>

            <hr>
            <section class="filmes-home">
                <% for (var i=0; i<6; i++) { %>
                    <div class="filme-show">
                        <a href="<%= '/produtos' %>\">
                            <img src="https://image.tmdb.org/t/p/w500/<%= listaFilmes[i].background%>" alt="" id="back-filme">
                            <div class="descri">
                                <div>
                                    <h3 id="nome-filme">
                                        <%= listaFilmes[i].nome %>
                                    </h3>
                                    <p id="descri-filme">
                                        <%= listaFilmes[i].descricao %>
                                    </p>
                                </div>
                                <div id="dados-filmes">
                                    <img src="https://image.tmdb.org/t/p/w500/<%= listaFilmes[i].imagem %>" id="img-filmes">
                                    <%= listaFilmes[i].imagem %>
                                </div>
                            </div>
                        </a>
                    </div>
                    <% } %>
            </section>
            <hr>
            <div class="titulos">
                <h1>SÉRIES</h1>
                <a href="<%= '/produtos/series' %>">Mais Séries...</a>
            </div>
            <hr>
            <section class="series-home">
                <% for (var i=0; i<6; i++) { %>
                    <div class="filme-show">
                        <a href="<%= '/produtos' %>\">
                            <img src="https://image.tmdb.org/t/p/w500/<%= listaSeries[i].background %>" alt="" id="back-filme">
                            <div class="descri">
                                <div>
                                    <h3 id="nome-filme">
                                        <%= listaSeries[i].nome %>
                                    </h3>
                                    <p id="descri-filme">
                                        <%= listaSeries[i].descricao %>
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <% } %>
            </section>
        </section>
    </main>

    <%- include('partials/footer')%>