<%- include('partials/header') %>

        <main>
            <section class="container-central">
                <button id="prev">&lArr;</button>
                <div class="carrossel-container">
                    <div class="carrossel">
                        <div class="slide1">
                            <img src="/img/banner1.jpg" alt="">
                        </div>
                        <div class="slide2">
                            <img src="/img/banner2.jpg" alt="">
                        </div>
                        <div class="slide3">
                            <img src="/img/banner3.jpg" alt="">
                        </div>
                        <div class="slide4">
                            <img src="/img/banner4.jpg" alt="">
                        </div>
                    </div>
                </div>
                <button id="next">&rArr;</button>
            </section>
            <h1 class="mais-populares">OS MAIS POPULARES</h1>
            <hr>

            <div id="items-wrapper">
                <div id="items">
                    <div class="item"><img src="/img/carrossel-populares/scrool1.jpg"></div>
                    <div class="item"><img src="/img/carrossel-populares/scrool2.jpg"></div>
                    <div class="item"><img src="/img/carrossel-populares/scrool3.jpg"></div>
                    <div class="item"><img src="/img/carrossel-populares/scrool4.jpg"></div>
                    <div class="item"><img src="/img/carrossel-populares/scrool5.jpg"></div>
                    <div class="item"><img src="/img/carrossel-populares/scrool6.jpg"></div>
                </div>
            </div>
            <section class="container">
                <div class="titulos">
                    <h1>FILMES</h1>
                    <a href="<%= '/produtos/filmes' %>">Mais Filmes...</a>
                </div>

                <hr>
                <section class="filmes-home">
                    <% for (var i =0; i<6; i++) { %>
                        <div class="filme-show">
                            <a href="<%= '/produtos' %>\">
                                <img src="/img/filmes/<%= listaFilmes[i].background%>.jpg" alt="" id="back-filme">
                                <div class="descri">
                                    <div>
                                        <h3 id="nome-filme">
                                            <%= listaFilmes[i].nome %>
                                        </h3>
                                        <p id="descri-filme">
                                            <%= listaFilmes[i].descricao %>
                                        </p>
                                    </div>
                                    <div id="dados-filmes">
                                        <h1 id="id-filmes"><%= listaFilmes[i].id %></h1>
                                        <h1 id="categoria-filmes">
                                            <%= listaFilmes[i].id %>
                                        </h1>
                                        <h1 id="tipo-filmes">
                                            <%= listaFilmes[i].tipo %>
                                        </h1>
                                        <h1 id="aluga-filmes">
                                            <%= listaFilmes[i].valor_aluguel %>
                                        </h1>
                                        <h1 id="compra-filmes">
                                            <%= listaFilmes[i].valor_compra %>
                                        </h1>
                                        <img src="/img/filmes/<%= listaFilmes[i].imagem %>.jpg" id="img-filmes">
                                            <%= listaFilmes[i].imagem %>
                                    </div>
                                </div>
                            </a>
                        </div>
                    <% } %>
                </section>

                <div class="titulos">
                    <h1>SÉRIES</h1>
                    <a href="<%= '/produtos/series' %>">Mais Séries...</a>
                </div>
                <hr>
                <section class="series-home">
                    <% for (var i=0; i<5; i++) { %>
                        <div class="series-show">
                            <a href="<%= '/produtos' %>\">
                                <img src="/img/series/<%= listaSeries[i].background %>.jpg" alt="" id="back-filme">
                                <div class="descri">
                                    <div>
                                        <h3 id="nome-series">
                                            <%= listaSeries[i].nome %>
                                        </h3>
                                        <p id="descri-series">
                                            <%= listaSeries[i].descricao %>
                                        </p>
                                    </div>
                                    <div id="dados-series">
                                        <h1 id="id-series"><%= listaSeries[i].id %></h1>
                                        <h1 id="categoria-series">
                                            <%= listaSeries[i].id %>
                                        </h1>
                                        <h1 id="tipo-series">
                                            <%= listaSeries[i].tipo %>
                                        </h1>
                                        <h1 id="aluga-series">
                                            <%= listaSeries[i].valor_aluguel %>
                                        </h1>
                                        <h1 id="compra-series">
                                            <%= listaSeries[i].valor_compra %>
                                        </h1>
                                        <img src="/img/series/<%= listaSeries[i].imagem %>.jpg" id="img-series">
                                        <%= listaSeries[i].imagem %>
                                    </div>
                                </div>
                            </a>
                        </div>
                    <% } %>
                </section>
            </section>
        </main>

<%- include('partials/footer')%>