<head>
    <script src="/javascripts/index.js" defer></script>
</head>

<%- include('partials/header') %>
        <main>

            <section class="container">
                <div class="titulos">
                    <h1>FILMES</h1>
                </div>

                <hr>
                <section class="filmes-home">
                    <% for (const listaFilmes of Filmes) { %>
                        <div class="filme-show">
                            <a href="<%= '/produtos' %>\">
                                <img src="/img/filmes/<%= listaFilmes.background %>.jpg" alt="" id="back-filme">
                                <div class="descri">
                                    <div>
                                        <h3 id="nome-filme">
                                            <%= listaFilmes.nome %>
                                        </h3>
                                        <p id="descri-filme">
                                            <%= listaFilmes.descricao %>
                                        </p>
                                    </div>
                                    <div id="dados-filmes">
                                        <h1 id="id-filmes">
                                            <%= listaFilmes.id %>
                                        </h1>
                                        <h1 id="categoria-filmes">
                                            <%= listaFilmes.id %>
                                        </h1>
                                        <h1 id="tipo-filmes">
                                            <%= listaFilmes.tipo %>
                                        </h1>
                                        <h1 id="compra-filmes"> 
                                            <%= listaFilmes.valor%>
                                        </h1>
                                        <img src="/img/filmes/<%= listaFilmes.imagem %>.jpg" id="img-filmes">
                                        <%= listaFilmes.imagem %>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <% } %>
                </section>
            </section>
        </main>
<%- include('partials/footer')%>

