<head>
    <script src="/javascripts/index.js" defer></script>
</head>

<%- include('partials/header') %>
<main>
    <section class="container">
            <div class="titulos">
            <h1><%= filmes[0].tipo %>S</h1>
        </div>
        
              <section class="filmes-home">
                    <% for (const listafilmes of filmes) { %>
                        <div class="filme-show">
                            <a href="<%= '/produtos' %>/?nome=<%- listafilmes.nome  %>">
                                <img src="/img/<%= listafilmes.tipo %>s/<%= listafilmes.background%>.jpg" alt="" id="back-filme">
                                <div class="descri">
                                    <div>
                                        <h3 id="nome-filme">
                                            <%= listafilmes.nome %>
                                        </h3>
                                    </div>
                                </div>
                            </a>
                        </div>
                    <% } %>
        </section>
    </section>
</main>
<%- include('partials/footer')%>
