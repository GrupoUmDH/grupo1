<%- include('partials/header') %>
<main>
    <div>
        <% if (filme) {%>
            <h2>Editar</h2>
        <% } else { %>
            <h2>Adicionar</h2>
        <% } %>
        <form method="POST" action="/produtos/adicionaFilme" enctype="multipart/form-data">
            <div class="check">
                <input type="radio" name="tipo" value="filmes" class="check" checked/>
                <label for="Filmes">Filmes</label>
                <input type="radio" name="tipo" value="series" class="check" />
                <label for="Séries">Séries</label>
            </div>
            <div id="div-add-dados">
                <input type="text" name="nome" placeholder="nome" />
                <textarea type="text" name="descricao" placeholder="Descrição do filme"></textarea>
                <select name="categoria" id="categoria">
                </select>
                <select name="classificacao" id="classificacao">
                </select>
                <input type="text" name="valor" placeholder="valor" />
                <p>Imagem Widescreen</p>
                <input type="file" name="imagem" placeholder="imagem" />
                <p>Capa</p>
                <input type="file" name="background" placeholder="background" />
            </div>
            
            <button id="bt-add-filme" type="submit">Adicionar</button>
        </form>
    </div>
</main>
<%- include('partials/footer')%>