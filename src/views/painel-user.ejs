<%- include('partials/header') %>

    <aside class="container-side">
        <nav id="menu">
            <h1>Minha Conta</h1><br>
            <hr><br>
            <ul>
                <li><a href="#historico">Histórico de pedidos</a></li><br>
                <li><a href="#alterar">Alterar cadastro</a></li><br>
                <li><a href="#cadastrar">Cadastrar cartão</a></li><br>
                <li><a href="#cancelar">Cancelar assinatura</a></li>
            </ul>
        </nav>
    </aside>
    <main class="main-painelUser">
        <div id="section-content">
            <section id="section-historico">
                <h1 id="historico">Histórico de Pedidos</h1> <br>
                <section class="container"><br>
                    <hr>
                    <section class="historico">
                        <div class="titulos">
                            <h2>Comprados</h2>
                        </div>
                        <hr>

                        <div class="comprados">
                            <div> <img src="../img/filmes/homemAranha_01.jpg" alt="">
                                <p>Homem Aranha</p>
                            </div>
                            <div> <img src="../img/filmes/homemAranha_01.jpg" alt="">
                                <p>Homem Aranha</p>
                            </div>
                            <div> <img src="../img/filmes/homemAranha_01.jpg" alt="">
                                <p>Homem Aranha</p>
                            </div>
                            <div><img src="../img/filmes/homemAranha_01.jpg" alt="">
                                <p>Homem Aranha</p>
                            </div>
                        </div>
                    </section>
                </section><br>
            </section>
            <section id="section-dados">
                <section class="altera-dados">
                    <div class="titulos">
                        <h1 id="alterar">Alterar Dados</h1>
                    </div>
                    <br>

                    <section class="alterar">
                        <div class="formulario">
                            <div class="dados-usuario">
                                <div>
                                    <form class="form-cad" method="post"
                                        action="/painel/users/atualizar?_method=PUT">

                                        <label for="nome_usuario">Usuário:</label>
                                        <input value="<%- users.nome_usuario %>" placeholder="NOME USUÁRIO.."
                                            type="text" name="nome_usuario" id="user" />
                                        <label for="email">e-mail:</label>
                                        <input value="<%- users.email %>" placeholder="EMAIL..." type="email"
                                            name="email" />
                                        <label for="senha">Senha:</label>
                                        <input placeholder="SENHA" type="password" name="senha" />
                                        <label for="tipo_usuario">Tido de usuário:</label>
                                        <select name="tipo_usuario">
                                            <option selected hidden disabled>Credencial</option>
                                            <option type="check" value="cliente">cliente</option>
                                            <option value="admin">admin</option>
                                        </select>

                                        <button type="submit">Atualizar</button>
                                    </form>
                                </div>

                                <div class="dados-completos">
                                    <div>
                                        <h1>Dados completos do usuário: </h1>
                                    </div>
                                    <% if (!dados) { %>
                                        <div>
                                            <h4> Usuário nao preencheu os dados</h4>
                                        </div>
                                        <div id="bt-dados">
                                            <button>Preencher</button>
                                        </div>
                                        <% } else { %>
                                            <div>
                                                <h4>Nome</h4>
                                                <p><%- dados.nome_usuario %></p>
                                                <h4>Sobrenome</h4>
                                                <p><%- dados.sobrenome%></p>
                                            </div>
                                            <div>
                                                <h4>CPF: </h4>
                                                <p><%- dados.cpf %></p>
                                            </div>
                                            <div>
                                                <h4>Endereço:</h4>
                                                <div>
                                                    <h5>Logradouro:</h5>
                                                    <p><%- dados.endereco %></p>
                                                </div>
                                                <div id="endereco">
                                                    <div>
                                                        <h5>Bairro: </h5>
                                                        <p><%- dados.bairro %></p>
                                                        <h5>Cidade: </h5>
                                                        <p><%- dados.cidade %></p>
                                                    </div>
                                                    <div>
                                                        <h5>Estado: </h5>
                                                        <p><%- dados.estado %></p>
                                                        <h5>CEP: </h5>
                                                        <p><%- dados.codigo_postal %></p>
                                                    </div>
                                                </div>
                                            </div>
                                            <div>
                                                <h4>Formas de pagamento cadastrados:</h4>
                                            </div>
                                            <div id="bt-dados">
                                                <button>Editar</button>
                                            </div>
                                            <% } %>
                                </div>
                            </div>
                            <%- include('cadastroUsuario')%>
                        </div>
                    </section>
                </section><br>
            </section>

            <section id="section-pay">
                <!-- CARTAO DE CREDITO -->
                <section class="credit-card">
                    <br>
                    <div class="new-card">
                        <h1>Dados do novo cartão</h1>
                        <hr><br>
                        <div class="form-container active">
                            <form class="formulario-card" action="" method="post">
                                <input placeholder="Número do cartão" type="text" name="number" value="<%- dados.cartao[0].numero_cartao %>"></input>
                                <input placeholder="Nome completo" type="text" name="name1"><%- dados.cartao.nome_completo %></input>
                                <input placeholder="MM/AA" type="text" name="expiry"><%- dados.cartao.vencimento %></input>
                                <input placeholder="CVC" type="text" name="cvc"><%- dados.cartao.cvc %></input>
                                <button type="submit">Cadastrar Novo Cartão</button>
                            </form>
                        </div>
                    </div>
                </section> <br>
            </section>
            <section id="section-cancelar">
                <!-- CANCELAR CONTA -->
                <section class="cancelar">
                    <div class="titulos">
                        <h1 id="cancelar">Deseja cancelar sua assinatura?</h1>
                    </div>
                    <hr><br>

                    <section class="cancel">
                        <button type="submit">Cancelar Assinatura</button>
                    </section>
                </section>
            </section>
        </div>

        <% if(popUp) { %>
            <div class="pop-up" style="display: flex">
                <div id="pop-up-content">
                    <span><button>X</button></span>
                    <h2><%- mensagem%></h2>
                    <h4><%- aviso%></h4>
                </div>
            </div>
        <% } %>

    </main>

    <%- include('partials/footer') %>